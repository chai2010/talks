* 你好, 世界!(03)

	package main

	//static void SayHello(char* s);
	import "C"

	func main() {
		C.SayHello(C.CString("Hello, World\n"))
	}

	//export SayHello
	func SayHello(s *C.char) {
		fmt.Print(C.GoString(s))
	}

